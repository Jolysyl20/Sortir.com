    <div class="col-6">
    <div class="bonjour">
      <marquee scrolldelay=200  behavior="alternate">
        <h3 class="textColor" style='margin-top:2%'><a href="{{ path ('afficherProfil', {id : user.id }) }}">{{ user.prenom }} </a></h3>
